<div class="container">
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed? then %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task.id) %>
        <%= link_to task_path(task),
        method: :delete,
        data: { confirm: "Are you sure you want to delete \"#{task.title}\"?" } do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <h3>
    Add a new task
  </h3>
  <a href="/tasks/new">
    <i class="fa fa-plus"></i>
    Add a new task
  </a>
</div>
